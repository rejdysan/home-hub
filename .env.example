# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USER=your_mqtt_username
MQTT_PASS=your_mqtt_password
MQTT_KEEPALIVE=60

# Server Configuration
HOST=0.0.0.0
PORT=8000

# API Keys
GOLEMIO_API_KEY=your_golemio_api_key_here
TODOIST_API_KEY=your_todoist_api_key_here

# Location (latitude,longitude for weather)
LOCATION_LATITUDE=50.0878433
LOCATION_LONGITUDE=14.478581

# Todoist Project IDs
TODOIST_PROJECT_1=your_project_id_1
TODOIST_PROJECT_2=your_project_id_2

# Update Intervals (in seconds)
WEATHER_UPDATE_INTERVAL=300
NAMEDAY_UPDATE_INTERVAL=3600
BUS_UPDATE_INTERVAL=10
# System monitoring: 5 seconds is good balance for Raspberry Pi (less CPU overhead)
SYSTEM_MONITOR_INTERVAL=5
GOOGLE_MAPS_UPDATE_INTERVAL=60
GOOGLE_CALENDAR_UPDATE_INTERVAL=300
TODOIST_UPDATE_INTERVAL=60

# Kiosk modes (HH:MM format)
MORNING_MODE_START=05:30
DAY_MODE_START=08:00
NIGHT_MODE_START=22:00

# MQTT Throttle
MQTT_SAVE_THROTTLE=5
SENSOR_OFFLINE_TIMEOUT=30
SENSOR_STATUS_CHECK_INTERVAL=5

# Database
DB_NAME=sensors.db
DB_CLEANUP_DAYS=30
DB_CLEANUP_HOUR=3

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

